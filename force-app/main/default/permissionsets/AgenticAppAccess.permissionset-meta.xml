<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Provides access to the Agentic App, its tabs, and related components</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Agentic App Access</label>
    
    <!-- Application Access -->
    <applicationVisibilities>
        <application>AgenticApp</application>
        <visible>true</visible>
    </applicationVisibilities>
    
    <!-- Tab Access -->
    <tabSettings>
        <tab>AgenticCockpit</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    
    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>UserActionLog__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>
    
    <!-- Field Permissions -->
    <fieldPermissions>
        <editable>true</editable>
        <field>UserActionLog__c.ActionDetails__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>UserActionLog__c.ActionTimestamp__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>UserActionLog__c.User__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>UserActionLog__c.RelatedRecordId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
</PermissionSet>